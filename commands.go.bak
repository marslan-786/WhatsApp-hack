// 2. Ù…ÛŒÙ…ÙˆØ±ÛŒ Ø³Û’ Ù¾Ø±ÛŒÙÚ©Ø³ Ø­Ø§ØµÙ„ Ú©Ø±Ù†Û’ ÙˆØ§Ù„Ø§ ÙØ§Ø³Ù¹ ÙÙ†Ú©Ø´Ù†
func getPrefix(botID string) string {
	prefixMutex.RLock()
	p, exists := botPrefixes[botID]
	prefixMutex.RUnlock()
	if exists {
		return p
	}
	// Ø§Ú¯Ø± Ù…ÛŒÙ…ÙˆØ±ÛŒ Ù…ÛŒÚº Ù†ÛÛŒÚº ÛÛ’ ØªÙˆ ÙÙˆØ±Ø§ Ø±ÛŒÚˆÛŒØ³ Ø³Û’ Ø§Ù¹Ú¾Ø§ Ú©Ø± Ù…ÛŒÙ…ÙˆØ±ÛŒ Ù…ÛŒÚº ÚˆØ§Ù„ÛŒÚº
	p = fetchPrefixFromRedis(botID)
	prefixMutex.Lock()
	botPrefixes[botID] = p
	prefixMutex.Unlock()
	return p
}

// 3. Ø±ÛŒÚˆÛŒØ³ Ù…ÛŒÚº Ù¾Ø±ÛŒÙÚ©Ø³ Ø§Ù¾ÚˆÛŒÙ¹ Ú©Ø±Ù†Û’ ÙˆØ§Ù„Ø§ ÙÙ†Ú©Ø´Ù†
func updatePrefixDB(botID string, newPrefix string) {
	prefixMutex.Lock()
	botPrefixes[botID] = newPrefix
	prefixMutex.Unlock()

	if rdb != nil {
		rdb.Set(context.Background(), "prefix:"+botID, newPrefix, 0)
	}
}

