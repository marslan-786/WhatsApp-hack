	val, err := rdb.Get(context.Background(), "prefix:"+botID).Result()
	if err != nil || val == "" {
		return "." // Ø§Ú¯Ø± Ú©Ú†Ú¾ Ù†Û Ù…Ù„Û’ ØªÙˆ ÚˆØ§Ù¹ ÚˆÛŒÙØ§Ù„Ù¹ ÛÛ’
	}
	
	return val
