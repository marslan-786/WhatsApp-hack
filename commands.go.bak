func fetchPrefixFromRedis(botID string) string {
	// Ø§Ú¯Ø± rdb (Redis) Ú©Ù†ÛŒÚ©Ù¹ Ù†ÛÛŒÚº ÛÛ’ ØªÙˆ ÚˆÛŒÙØ§Ù„Ù¹ ÙˆØ§Ù¾Ø³ Ú©Ø±ÛŒÚº
	if rdb == nil {
